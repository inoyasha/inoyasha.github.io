// Custom styles.
// 主页文章添加阴影效果
.post {
margin-top: 60px;
margin-bottom: 60px;
padding: 25px;
-webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
-moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
}

.feed-link{
	border: none;
}


.links-of-blogroll-item a:hover{
	color: #fc6423;
	border-bottom: 1px solid #fc6423;
}

.menu .menu-item a {
  font-size:14px;
}

.brand{
  background:none;
  color:#000;
}
.brand:hover{
  color:#fc6423;	
}
.site-title {
  font-size:36px;
}

.posts-expand .post-title-link{
  line-height:1.5;
  font-size:26px;
}
.posts-expand .post-title{
  font-weight: bold;
}
nav.pagination{
  margin:0;
  padding:40px 0 0 0 ;
}
.site-pv,
.site-uv,
.copyright,
.theme-info,
.powered-by{
  font-family:"仿宋";
  color:#666;
}
span.post-meta-item-text,
.theme-link{
  font-family:"consolas";
}
.posts-expand .post-meta{
  margin: 20px 0;
}

.pagination .page-number.current{
  background-color:#222;
}


